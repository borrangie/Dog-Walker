<main class="container">
    {{> messages}}
    {{> errors}}

    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-5 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-header">
                        <h1 class="card-title text-center">Ingresar</h1>
                        <img src="/img/logo.png" alt="logo-signin" class="mx-auto d-block m-4 logo">
                    </div>
                    <div class="card-body">
                        <form action="/users/signin" method="POST" class="form-signin">

                            <div class="form-label-group">
                                <input type="email" id="inputEmail" class="form-control" name="mail" value="{{mail}}"
                                    placeholder="Direccion de Mail" required>
                                <label for="inputEmail">Direccion de Mail</label>
                            </div>

                            <div class="form-label-group">
                                <input type="password" id="inputPassword" class="form-control" name="password"
                                    value="{{password}}" placeholder="Contraseña" required>
                                <label for="inputPassword">Contraseña</label>
                            </div>

                            <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign
                                In</button>
                            <hr class="my-4">
                            <button class="btn btn-lg btn-google btn-block text-uppercase" type="submit"><i
                                    class="fab fa-google mr-2"></i> Sign In con Google</button>
                            {{!-- <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit"><i
                class="fab fa-facebook-f mr-2"></i> Sign in with Facebook</button> --}}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>